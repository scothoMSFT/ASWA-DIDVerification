{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dnsResolverName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "virtualNetworkId": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "dnsResolverDeploymentName": {
            "type": "string"
        },
        "dnsResolverResourceGroup": {
            "type": "string"
        },
        "inboundEndpointName0": {
            "type": "string"
        },
        "inboundEndpointSubnetId0": {
            "type": "string"
        },
        "outboundEndpointName0": {
            "type": "string"
        },
        "outboundEndpointSubnetId0": {
            "type": "string"
        },
        "outboundEndpointsDeploymentName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/dnsResolvers",
            "apiVersion": "2020-04-01-preview",
            "name": "[parameters('dnsResolverName')]",
            "location": "[parameters('location')]",
            "properties": {
                "virtualNetwork": {
                    "id": "[parameters('virtualNetworkId')]"
                }
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2020-04-01-preview",
            "type": "Microsoft.Network/dnsResolvers/inboundEndpoints",
            "name": "[concat(parameters('dnsResolverName'), '/', parameters('inboundEndpointName0'))]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "subnet": {
                            "id": "[parameters('inboundEndpointSubnetId0')]"
                        },
                        "privateIpAllocationMethod": "Dynamic"
                    }
                ]
            },
            "dependsOn": [
                "[parameters('dnsResolverName')]"
            ]
        },
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "[parameters('outboundEndpointsDeploymentName')]",
            "dependsOn": [
                "[parameters('inboundEndpointName0')]"
            ],
            "resourceGroup": "[parameters('dnsResolverResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "apiVersion": "2020-04-01-preview",
                            "type": "Microsoft.Network/dnsResolvers/outboundEndpoints",
                            "name": "[concat(parameters('dnsResolverName'), '/', parameters('outboundEndpointName0'))]",
                            "location": "[parameters('location')]",
                            "properties": {
                                "subnet": {
                                    "id": "[parameters('outboundEndpointSubnetId0')]"
                                }
                            },
                            "dependsOn": []
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}